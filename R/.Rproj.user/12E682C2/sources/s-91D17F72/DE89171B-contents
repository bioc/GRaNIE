#' @importFrom utils packageVersion
.onAttach <- function(libname, pkgname) {
    
    lengthDashes = 106
    message = paste0("\n",
                     paste0(rep("-",lengthDashes),collapse = ""),
                     "\n",
                     "|       Welcome to the GRN package and thank you for using our software. This is GRN version ", packageVersion("GRN"),".        |\n",
                     "| See the vignettes (type browseVignettes(\"GRN\") or the help pages for how to use GRN for your analyses. |\n",
                     "|   Thank you for using our software. Please do not hesitate to contact us if there are any questions.   |\n",
                     paste0(rep("-",lengthDashes),collapse = ""),
                     "\n"
                     )
    packageStartupMessage(message)
    
    # Turn off scientific notation
    options(scipen = 999) 

}
